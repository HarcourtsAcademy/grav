{% if config.plugins.simplesearch.enabled %}
<div class="sidebar-content">
    <h4>Search</h4>
    {% include 'partials/simplesearch_searchbox.html.twig' %}
</div>
{% endif %}
{% if page.header.sidebar_links %}
<div class="sidebar-content">
  {% for links in page.header.sidebar_links %}
     <h4>{{ links.heading }}</h4>
     <ul>
     {% for link in links.links %}
         <li><a href="{{ link.url }}">{{ link.label }}</a></li>
     {% endfor %}
     </ul>
  {% endfor %}
 </div>
{% endif %}
{### Subpage Navigation ###}
{% if page.header.side_bar_menu %}
{% set depth = 1 %}
{% if page.header.sidebar_navigation.maxdepth %}
  {% set maxdepth = page.header.sidebar_navigation.maxdepth %}
{% else %}
  {% set maxdepth = config.site.sidebar_navigation.maxdepth %}
{% endif %}
{% macro subpage_menu(page, maxdepth, depth) %}

  {% if page.visible %}
    {% set current_page = (page.active) ? 'active' : '' %}
      <li class="{{ current_page }}">
        <a href="{{ page.url }}" class="external">
            {% if page.active %}<i class="fa fa-fw fa-chevron-right"></i>
            {% elseif page.header.icon %}<i class="fa fa-fw fa-{{ page.header.icon }}"></i>
            {% else %}<i class="fa fa-fw"></i>
            {% endif %}
            {{ page.menu }}
        </a>
        {% if page.active or page.activeChild and depth < maxdepth %}
          <ul class="navigation">
            {% for subpage in page.children %}
              {{ _self.subpage_menu(subpage, maxdepth, (depth + 1) ) }}
            {% endfor %}
          </ul>
        {% endif %}
      </li>
  {% endif %}
{% endmacro %}
<div class="sidebar-content">
  {% for toplevelpage in pages.children %}
    {% if page.route starts with toplevelpage.route and toplevelpage.route != '/' %}
    <h4>{{ toplevelpage.title }}</h4>
    <ul class="navigation">
      {% for page in toplevelpage.children %}
        {{ _self.subpage_menu(page, maxdepth, depth) }}
      {% endfor %}
    </ul>
    {% endif %}
  {% endfor %}
</div>
{% endif %}
